<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:id="@+id/selectbgpanel"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
        <Button
            android:layout_marginRight="5dip"
             android:layout_marginLeft="5dip"
	android:id="@+id/ecardselectleftbutton"
    android:layout_width="36dp" 
    android:layout_height="36dp" 
 	android:background="@drawable/arrowleft"
    android:layout_gravity="center_vertical"
    />
    <ImageView 
android:layout_width="250dip" android:layout_height="139dip"
android:id="@+id/ecardbgselect" android:contentDescription="@string/desc"
   android:src="@drawable/boxsilverx"
   android:layout_gravity="center_vertical"
   android:layout_weight="1"
   android:scaleType="fitXY"
    /> 
    
    <Button
        android:layout_marginRight="5dip"
             android:layout_marginLeft="5dip"
	android:id="@+id/ecardselectrightbutton"
    android:layout_width="36dp" 
    android:layout_height="36dp" 
 	android:background="@drawable/arrowright"
 	android:layout_gravity="center_vertical"
    />
    </LinearLayout>
    <Button
	android:id="@+id/ecardselectbutton"
    android:layout_width="81dp" 
    android:layout_height="32dp" 
    android:background="@drawable/button_ok_yellow"
 	android:layout_below="@+id/selectbgpanel"
 	android:layout_centerHorizontal="true"
    />

</RelativeLayout>
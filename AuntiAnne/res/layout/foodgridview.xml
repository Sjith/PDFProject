<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/foodgrid"
  >
 
  <ImageView 
android:layout_width="154dp" android:layout_height="182dp"
android:src="@drawable/boxbluehd"
android:id="@+id/foodbackground"
android:contentDescription="@string/desc"
android:layout_centerHorizontal="true"
/>
    <ImageView android:layout_height="60dp" 
    android:id="@+id/foodimage" android:layout_width="90dp"
    android:contentDescription="@string/desc"

    ></ImageView>
  
    <TextView android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/foodname"
  android:textSize="10dip"
  android:layout_centerHorizontal="true"
  android:gravity="center_horizontal"
  android:layout_below="@+id/foodimage"
  android:layout_marginTop="5dp"
  />
    
    <TextView android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/fooddescript"
  android:textSize="10dip"
  android:layout_centerHorizontal="true"
  android:gravity="center_horizontal"
  android:layout_below="@+id/foodname"
  android:layout_marginRight="10dip"
  android:layout_marginLeft="10dip"
  />
  
</RelativeLayout>
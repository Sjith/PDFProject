<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <TextView android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/bookmarktextpage"
  android:textSize="35dip"
  android:textStyle="bold"
  android:textColor="#000000"
  android:layout_marginLeft="50dp"

  android:text="@string/page"
  />
    <TextView android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/bookmarkpagenum"
  android:textSize="35dip"
  android:textStyle="bold"
  android:textColor="#000000"
  android:layout_marginLeft="10dp"

  android:layout_toRightOf="@+id/bookmarktextpage"
  />
    <Button android:layout_width="40dp" android:layout_height="39dp"
        android:layout_alignParentRight="true"
         android:layout_marginRight="50dp"
         android:background="@drawable/bookmarkedeletebutton"
        android:id="@+id/deletebookmarkbutton"/>
<ImageView android:id="@+id/bookmarkline"
               android:layout_width="317dp"
               android:layout_height="5dp"
               android:src="@drawable/bookmarkline"
               android:contentDescription="@string/desc"
               android:layout_below="@+id/bookmarktextpage"
               android:layout_centerHorizontal="true"
               />
</RelativeLayout>
